{
  "name": "imaginary-teleprompter-electron",
  "email": "support@imaginary.tech",
  "homepage":"http://imaginary.tech/teleprompter/",
  "description": "The most complete and professional free software teleprompter app on the web.",
  "license": "GPL-3.0+",
  "version": "2.1.0",
  "keywords": [
    "teleprompter", "imaginary", "television", "online", "portable", "local"
  ],
  "author": "Imaginary Films LLC <support@imaginary.tech> (http://imaginary.tech)",
  "contributors": [
    "Javier O. Cordero-Pérez <javier@imaginary.tech> (http://javiercordero.info)",
    "Victor A. Ortiz-Alvarado <va2ron1@gmail.com> (https://twitter.com/Va2ron1)",
    "Rafael J. Sierra-Soto <rafael.sierra2@upr.edu> (https://www.facebook.com/rafael.jose.7737)",
    "Keyvan Pérez Pérez <keyvan.perez2@gmail.com> (https://github.com/keyvanp)"
    ],
  "repository": {
    "type": "git",
    "url": "https://github.com/imaginaryfilms/Teleprompter-Electron"
  },
  "bugs": {
    "url": "https://github.com/imaginaryfilms/Teleprompter-Core/issues"
  },
  "main": "main.js",
  "devDependencies": {
    "electron-builder": "^11.2.0",
    "electron-builder-squirrel-windows": "*",
   	"electron": "^1.4.13"
  },
	"scripts": {
	  "postinstall": "install-app-deps",
	  "start": "electron ./app --enable-logging",
	  "dev": "NODE_ENV='development' npm run start",
	  "dist": "npm run dist:win && npm run dist:linux && npm run dist:osx",
    "dist:winux": "npm run dist:win && npm   run dist:linux",
    "dist:linux": "build --platform linux",
    "dist:osx": "build --platform darwin",
    "dist:win": "npm run dist:win64 && npm run dist:win32",
    "dist:win32": "build --platform win32 --arch ia32",
    "dist:win64": "build --platform win32 --arch x64",
    "pack": "build --dir"
	},
  "engine": "node >= 1.1.65",
  "preferGlobal": "false",
  "build": {
    "appId": "ImaginaryFilms.Teleprompter.TeleprompterForWindows",
    "mac-category-type": "app-category-type=public.app-category.video",
    "asar": "true",
    "productName": "Teleprompter by Imaginary Films",
    "squirrelWindows":{
      "msi": false,
      "loadingGif":"build/install-spinner.png",
      "remoteReleases":"https://github.com/imaginaryfilms/Teleprompter-Electron",
      "copyright":"Copyright © year author"
    },
    "win": {
      "title": "Teleprompter",
      "icon": "build/icon.ico",
      "target": "squirrel",
      "msi": false
    },
    "dmg": {
      "title": "Teleprompter by Imaginary Films - ${version}",
      "iconSize": 64,
      "iconTextSize": 11,
      "contents": [
        { "x": 130, "y": 108, "type": "file" },
        { "x": 130, "y": 222, "type": "link", "path": "/Applications" }
      ]
    },
    "mac": {
      "target": "dmg",
      "title":"Teleprompter by Imaginary Films",
      "appId": "tech.imaginary.teleprompter",
      "icon": "build/icon.icns",
      "category": "public.app-category.video"
    },
    "linux": {
      "target": [ "AppImage", "deb", "rpm", "pacman", "freebsd" ],
      "executableName": "imaginary-teleprompter",
      "synopsis": "The most complete and professional free software teleprompter app on the web.",
      "vendor": "Imaginary Films LLC <support@imaginary.tech> (http://imaginary.tech)",
      "maintainer": "Javier O. Cordero Pérez <javier@imaginary.tech> (http://javiercordero.info)",
      "description": "Professional grade teleprompter software. Built with web technologies so anyone can customize it. Features include: mirroring, dual-screen support, rich text editing, image support, custom styles, tablet mode, webcam mode, auto-save and accelerated graphics.",
      "category": "AudioVideo;Video;Sequencer",
      "packageCategory": "Video"
    },
    "compression": "maximum"
  }
}
